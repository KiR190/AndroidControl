<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kir.rp.MainActivity">

    <Button
        android:id="@+id/PowerButton"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:onClick="PowerButtonOnClick"
        android:text="Включить"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SpeedTextView" />

    <Button
        android:id="@+id/ModeButton"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:onClick="ModeButtonOnClick"
        android:text="Режим"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/SpeedView" />

    <Button
        android:id="@+id/TempPlusButton"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:onClick="TempPlusButtonOnClick"
        android:text="Температура +"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/PowerButton" />

    <Button
        android:id="@+id/TempMinusButton"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:onClick="TempMinusButtonOnClick"
        android:text="Температура -"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ModeButton" />

    <Button
        android:id="@+id/SpeedButton"
        android:layout_width="140dp"
        android:layout_height="53dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:onClick="SpeedButtonOnClick"
        android:text="Скорость"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TempPlusButton" />

    <Button
        android:id="@+id/SwingButton"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:onClick="SwingButtonOnClick"
        android:text="Направление"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TempMinusButton" />

    <TextView
        android:id="@+id/tempView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="24°C"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintHorizontal_bias="0.356"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/SwingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Направление:"
        android:textColor="#000000"
        android:textSize="36sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ModetextView" />

    <TextView
        android:id="@+id/SpeedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Скорость:"
        android:textColor="#000000"
        android:textSize="36sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/SwingTextView" />

    <TextView
        android:id="@+id/ModetextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Режим:"
        android:textColor="#000000"
        android:textSize="36sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tempView" />

    <TextView
        android:id="@+id/ModeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Охлаждение"
        android:textColor="#000000"
        android:textSize="36sp"
        android:layout_marginRight="7dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tempView" />

    <TextView
        android:id="@+id/SwingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Авто"
        android:textColor="#000000"
        android:textSize="36sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ModeView" />

    <TextView
        android:id="@+id/SpeedView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Авто"
        android:textColor="#000000"
        android:textSize="36sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/SwingView" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical" />

    <Button
        android:id="@+id/LampaButton"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:onClick="LampaButtonOnClick"
        android:text="Включить"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/RozetkaButton"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginLeft="32dp"
        android:onClick="RozetkaButtonOnClick"
        android:text="Включить"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Розетка"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/LampaButton"
        app:layout_constraintTop_toBottomOf="@+id/SpeedButton"
        app:layout_constraintVertical_bias="0.909"
        android:layout_marginLeft="64dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Лампа"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/SwingButton"
        android:layout_marginRight="82dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
